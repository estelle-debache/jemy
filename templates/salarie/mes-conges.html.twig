{% extends 'layout.html.twig' %}


{% block content %}
    
  <section>
        <div class="container mesconges ">
           <h1 class="text-center">Mes Congés</h1>

            <div class="row">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Type de congés</th>
                    <th scope="col">Solde Droits</th>
                    <th scope="col">Acceptées</th>
                    <th scope="col">En attente</th>
                    <th scope="col">Solde</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">Congés Payés</th>
                    <td>25</td>
                    <td>0</td>
                    <td>0</td>
                    <td>25</td>
                  </tr>

                  <tr>
                    <th scope="row">RTT</th>
                    <td>11</td>
                    <td>0</td>
                    <td>0</td>
                    <td>11</td>
                  </tr>
                </tbody>
              </table>

              <button type="button" class="btn btn-primary btndemandeConge">Emettre une demande d'absence</button>

            </div>

            <div class="row demandeConge">
                <div class="col-12">
                  <h2>Créer une demande</h2>
                  <form>
                      <div class="form-group">
                        <label for="exampleFormControlSelect1">Type de congés</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                          <option></option>
                          <option>Congés payés</option>
                          <option>RTT</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="exampleFormControlSelect1">Date de début</label>
                        <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
                            <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4"/>
                            <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="exampleFormControlSelect1">Date de fin</label>
                        <div class="input-group date" id="datetimepicker3" data-target-input="nearest">
                            <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker3"/>
                            <div class="input-group-append" data-target="#datetimepicker3" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="exampleFormControlSelect1">Période</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                          <option></option>
                          <option>Journée entière</option>
                          <option>Demi journée - Matin</option>
                          <option>Demi journée - Après midi</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label>Durée</label>
                        <input type="" class="form-control">
                      </div>
                    </form>
                </div>

                  <a href="user.html"><button type="button" class="btn btn-primary">Retour</button></a>
                  <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>




        </div>
    </section>

{% endblock %}
