{% extends 'layout.html.twig' %}

{% block content %}
    <section>
        <div class="container modif-entreprise">
             <div class="row">
                <div class="col-12 col-md-12">
                    <h1 class="text-center">Modifier mon entreprise </h1>
                </div>
            </div>
    {{form_start(form)}}{# ouvre la balise form #}
    <div class="row">
        <div class="col-4">
        {{ form_row(form.nom) }} {# bloc de formulaire pour le champs name #}
        </div>
        <div class="col-4">
        {{ form_row(form.siren) }}
        </div>
        <div class="col-4">
        {{ form_row(form.siret) }}
        </div>
        <div class="col-6">
        {{ form_row(form.adresse) }}
        </div>
        <div class="col-2">
        {{ form_row(form.codePostal) }}
        </div>
        <div class="col-4">
        {{ form_row(form.ville) }}
        </div>
        <div class="col-6">
        {{ form_row(form.telephone) }}
        </div>
        <div class="col-6">
        {{ form_row(form.formeJuridique) }}
        </div>
        <div class="col-12">
        <div class="form-btn-group">
            <button type="submit" class="btn btn-primary">Valider</button>
        </div>
            </div>
    {{ form_end(form) }}{# ferme la balise form #}
        </div>
    <section>
    
{% endblock %}