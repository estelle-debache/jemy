
{% extends 'layout.html.twig' %}


{% block content %}
    
   
  <section>
        <div class="container liste-salaries">
            <div class="row">
                <div class="col-12 col-md-12">
                    <h1 class="text-center">Liste des employés </h1>
                </div>
                <div class="col-12 col-md-12 text-center">
                <a href="{{path('app_admin_ajoutsalaries')}}"><button type="button" class="btn btn-outline-success ">Ajouté un employé</button></a>
            </div>

            </div>
            <div class="row">
                <div class="col-12 col-md-12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Email</th>
                                <th scope="col">Téléphone</th>
                                <th scope="col"> </th>
                                <th scope="col"> </th>
                                <th scope="col"> </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for salarie in salaries %}
                            <tr>
                                <th scope="row">{{ salarie.id }}</th>
                                <td>{{ salarie.nom }}</td>
                                <td>{{ salarie.prenom }}</td>
                                <td>{{ salarie.email }}</td>
                                <td>{{ salarie.telephone }}</td>
                                <td><a href="modifier-employe.html"><i class="far fa-edit"></i></a></td>
                                <td><a href="modifier-employe.html"><button type="button" class="btn btn-primary">Congés</button></i></a><a href="modifier-employe.html"><button type="button" class="btn btn-primary">Fiches de paie</button></i></a></td>
                            </tr>
                            {% endfor %}
                        
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </section>

{% endblock %}
